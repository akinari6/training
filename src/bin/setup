#!/usr/bin/env ruby
# frozen_string_literal: true

require "fileutils"
APP_ROOT = File.expand_path("..", __dir__)

FileUtils.chdir APP_ROOT do
  system({ "BUNDLE_GEMFILE" => File.expand_path("../Gemfile", __dir__) }, "bundle install")
  system({ "BUNDLE_GEMFILE" => File.expand_path("../Gemfile", __dir__) }, "bundle exec rails db:prepare")
end
