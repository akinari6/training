<div class="card">
  <h1><%= @task.title %></h1>
  <p><strong>説明:</strong> <%= @task.description.presence || '説明はありません' %></p>
  <p><strong>期限:</strong> <%= l(@task.due_at, format: :long) if @task.due_at %></p>
  <p><strong>優先度:</strong> <%= @task.priority %></p>
  <p><strong>状態:</strong> <%= @task.completed? ? '完了' : '未完了' %></p>

  <div class="actions">
    <%= link_to "編集", edit_task_path(@task), class: "btn btn-secondary" %>
    <%= link_to "一覧に戻る", tasks_path, class: "btn btn-secondary" %>
  </div>
</div>
