<%= form_with model: @task do |form| %>
  <div class="field">
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title, placeholder: "例）週次ミーティングのアジェンダ作成" %>
  </div>

  <div class="field">
    <%= form.label :description, "説明" %>
    <%= form.text_area :description, rows: 4, placeholder: "タスクの目的や背景を記載してください" %>
  </div>

  <div class="field">
    <%= form.label :due_at, "期限" %>
    <%= form.datetime_select :due_at, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :priority, "優先度" %>
    <%= form.select :priority, Task.priorities.keys.map { |p| [p, p] } %>
  </div>

  <div class="field">
    <%= form.label :completed, "完了済み" %>
    <%= form.check_box :completed %>
  </div>

  <div class="form-actions">
    <%= form.submit "保存する", class: "btn btn-primary" %>
  </div>
<% end %>
