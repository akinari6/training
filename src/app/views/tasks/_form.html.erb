<%= form_with model: @task do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :due_at %>
    <%= form.datetime_select :due_at, include_blank: true %>
  </div>
  <div>
    <%= form.label :priority %>
    <%= form.select :priority, Task.priorities.keys.map { |p| [p, p] } %>
  </div>
  <div>
    <%= form.label :completed %>
    <%= form.check_box :completed %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
