<h1>タスク一覧</h1>

<div class="actions">
  <%= link_to "新規タスク", new_task_path, class: "btn btn-primary" %>
</div>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>期限</th>
      <th>優先度</th>
      <th>状態</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr class="<%= task.completed? ? 'completed' : '' %>">
        <td><%= link_to task.title, task %></td>
        <td><%= l(task.due_at, format: :short) if task.due_at %></td>
        <td><%= task.priority %></td>
        <td><%= task.completed? ? '完了' : '未完了' %></td>
        <td>
          <% if task.completed? %>
            <%= link_to '再開', reopen_task_path(task), method: :patch %>
          <% else %>
            <%= link_to '完了', complete_task_path(task), method: :patch %>
          <% end %>
          <%= link_to '編集', edit_task_path(task) %>
          <%= link_to '削除', task, method: :delete, data: { confirm: '本当に削除しますか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
